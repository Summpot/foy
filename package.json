{
	"name": "@summpot/foy",
	"version": "0.2.45",
	"type": "module",
	"description": "A simple, light-weight and modern task runner for general purpose.",
	"types": "./dist/index.d.ts",
	"module": "./dist/index.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "jiti ./src/cli.ts -- build",
		"check": "biome check --write",
		"test": "jiti ./src/cli.ts -- test",
		"test:update-snap": "jiti ./src/cli.ts -- test:update-snap",
		"watch": "jiti ./src/cli.ts -- watch",
		"format": "biome format --write"
	},
	"bin": {
		"foy": "./dist/cli.js"
	},
	"pre-commit": [],
	"files": ["dist"],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Summpot/foy.git"
	},
	"keywords": ["make", "build", "tools", "cli"],
	"author": "Zack Young",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Summpot/foy/issues"
	},
	"homepage": "https://github.com/Summpot/foy#readme",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@rslib/core": "^0.6.1",
		"@types/ejs": "^3.1.5",
		"@types/jasmine": "^5.1.7",
		"@types/node": "22.7.5",
		"axios": "1.8.4",
		"ejs": "^3.1.10",
		"generate-changelog": "^1.8.0",
		"jasmine": "^5.6.0",
		"jiti": "^2.4.2",
		"marked": "^15.0.7",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "4.2.0",
		"tsx": "^4.19.3",
		"typedoc": "^0.28.1",
		"typescript": "^5.8.2",
		"vitest": "^3.1.1"
	},
	"dependencies": {
		"cac": "^6.7.14",
		"chalk": "^5.4.1",
		"cli-spinners": "^3.2.0",
		"execa": "^9.5.2",
		"figures": "^6.1.0",
